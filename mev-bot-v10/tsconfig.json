{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",

    /* --- PATH ALIAS CONFIGURATION --- */
    "baseUrl": "./src",  /* This is the crucial part that was likely missing or wrong. */
    "paths": {
      "@core/*": ["core/*"],
      "@services/*": ["services/*"],
      "@arbitrage/*": ["arbitrage/*"],
      "@utils/*": ["utils/*"],
      "@shared/*": ["../../shared/*"] /* This allows importing from the shared folder */
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}