{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    // "rootDir": "./src", // Removed
    "rootDirs": ["./src", "./shared"], // Added
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "shared/**/*"], // Updated
  "exclude": ["node_modules", "dist", "tests"]
}
